<div class="container mt-5">
  <p class="text-success"><%= notice %></p>

  <div class="card">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Detalhes do Cliente</h4>
    </div>
    <div class="card-body">
      <%= render @cliente %>
    </div>
  </div>

  <div class="mt-4 d-flex justify-content-between">
    <%= link_to "Editar Cliente", edit_cliente_path(@cliente), class: "btn btn-outline-primary" %>
    <%= link_to "Voltar", clientes_path, class: "btn btn-outline-secondary" %>
    <%= button_to "Excluir", @cliente, method: :delete, data: { confirm: "Tem certeza que deseja excluir?" }, class: "btn btn-outline-danger" %>
  </div>
</div>
