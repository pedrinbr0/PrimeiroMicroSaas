<div class="container mt-4">
  <h1 class="mb-4 text-primary">Detalhes da Compra</h1>

  <div class="card shadow-sm">
    <%= render @compra %>
  </div>

  <div class="mt-4 d-flex justify-content-between">
    <%= link_to "Editar", edit_compra_path(@compra), class: "btn btn-outline-primary" %>
    <%= link_to "Voltar", compras_path, class: "btn btn-secondary" %>
    <%= button_to "Excluir", @compra, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger" %>
  </div>
</div>