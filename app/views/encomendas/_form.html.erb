<%= form_with(model: encomenda, class: "mt-3") do |form| %>
  <% if encomenda.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(encomenda.errors.count, "erro") %> impediram a encomenda de ser salva:</h4>
      <ul>
        <% encomenda.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :cliente_id, class: "form-label" %>
    <%= form.collection_select :cliente_id, Cliente.all, :id, :nome, { prompt: "Selecione um cliente" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :descricao, class: "form-label" %>
    <%= form.text_area :descricao, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :data_prevista, class: "form-label" %>
    <%= form.date_field :data_prevista, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, ["Aguardando", "Enviado", "Entregue"], { prompt: "Selecione um status" }, class: "form-select" %>
  </div>

  <%= form.submit "Salvar", class: "btn btn-success" %>
<% end %>
