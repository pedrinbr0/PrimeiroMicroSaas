<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= render @encomenda %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Editar", edit_encomenda_path(@encomenda), class: "btn btn-primary" %>
    <%= link_to "Voltar", encomendas_path, class: "btn btn-secondary" %>
    <%= button_to "Excluir", @encomenda, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger float-end" %>
  </div>
</div>
