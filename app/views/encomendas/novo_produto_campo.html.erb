  <%= f.hidden_field :quantidade, value: 1, class: "quantidade-oculta" %>

  <div class="row">
    <div class="col">
      <%= text_field_tag :codigo_barra, '', placeholder: 'CÃ³digo de Barras', class: 'form-control codigo-barra', onblur: 'buscarProdutoPorCodigo(this)' %>
    </div>
    <div class="col">
      <span class="preco-unitario">R$ 0,00</span>
