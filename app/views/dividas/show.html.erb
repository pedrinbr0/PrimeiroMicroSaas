<div class="container mt-4">
  <h1 class="text-primary text-center mb-4">Detalhes da Dívida</h1>

  <div class="card shadow-lg">
    <div class="card-body">
      <h5 class="card-title">Informações da Dívida</h5>

      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <strong>Cliente:</strong> <%= @divida.cliente.nome %>
        </li>
        <li class="list-group-item">
          <strong>Valor:</strong> <%= number_to_currency(@divida.valor) %>
        </li>
        <li class="list-group-item">
          <strong>Data de Vencimento:</strong> <%= @divida.data_vencimento.strftime("%d/%m/%Y") %>
        </li>
        <li class="list-group-item">
          <strong>Status:</strong>
          <% status_class = @divida.status == 'paga' ? 'success' : 'warning' %>
          <span class="badge bg-<%= status_class %>"><%= @divida.status.capitalize %></span>
        </li>
      </ul>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to 'Editar', edit_divida_path(@divida), class: "btn btn-warning me-2" %>
    <%= link_to 'Voltar', dividas_path, class: "btn btn-secondary me-2" %>
    <%= link_to 'Excluir', @divida, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: "btn btn-danger" %>
  </div>
</div>
