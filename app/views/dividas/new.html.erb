<h1>Nova Dívida</h1>

<%= form_with(model: @divida, local: true) do |form| %>
  <% if @divida.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@divida.errors.count, "error") %> proibiu esta dívida de ser salva:</h2>
      <ul>
        <% @divida.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cliente_id, "Cliente" %>
    <%= form.collection_select :cliente_id, Cliente.all, :id, :nome, prompt: "Selecione um Cliente" %>
  </div>

  <div>
    <%= form.label :valor, "Valor" %>
    <%= form.text_field :valor %>
  </div>

  <div>
    <%= form.label :data_vencimento, "Data de Vencimento" %>
    <%= form.date_field :data_vencimento %>
  </div>

  <div>
    <%= form.label :status, "Status" %>
    <%= form.select :status, ['pendente', 'pago'] %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Voltar', dividas_path %>
